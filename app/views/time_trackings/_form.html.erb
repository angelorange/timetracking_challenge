<%= render 'shared/errors', obj: @time_tracking %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@time_tracking, :html => {class: 'form-horizontal', role: 'form'} ) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :owner %><br>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :owner, class: "form-control", placeholder: "Owner", autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :comment %><br>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :comment, class: "form-control", placeholder: "Comment", autofocus: true %>
        </div>
      </div>

    <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.collection_select :geofencing_id, Geofencing.all, :id, :location, prompt: true, class: "form-control status" %>
          </div>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= f.submit "Submit", class:'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
  </div>
</div>

<script onload="updateClock(); setInterval('updateClock()', 1000 )"></script>