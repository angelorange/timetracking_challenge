<%= render 'shared/errors', obj: @geofencing %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@geofencing, :html => {class: 'form-horizontal', role: 'form'} ) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :location %><br>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :location, class: "form-control", placeholder: "Location", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :latitude %><br>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :latitude, class: "form-control", placeholder: "Latitude", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :longitude %><br>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :longitude, class: "form-control", placeholder: "Longitude", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :radius %><br>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :radius, class: "form-control", placeholder: "Radius", autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= f.submit "Create", class:'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
  </div>
</div>